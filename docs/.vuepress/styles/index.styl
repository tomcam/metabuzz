// Text color of main "home" label
// on left of sidebar
$siteNameColor = white

// Background color of top navbar
$navBarBackground = #3C7EB8

// Color of text for navbar links on top right side
$navBarRightColor = white


$h1color = #3C7EB8
$h2color = #DF7D2C 

//@import url('http://fonts.googleapis.com/css?family=Open+Sans|Open Sans')
@import url('http://fonts.googleapis.com/css?family=Arvo:400,700|Arvo')

// Can now specify font-family: "system"
// Source:
// https://css-tricks.com/snippets/css/system-font-stack/#article-header-id-0
// BUG: Don't think open sans works
@font-face {
  font-family: system;
  font-style: normal;
  src: local("Open Sans"), local(".SFNSText-Light"), local(".HelveticaNeueDeskInterface-Light"), local(".LucidaGrandeUI"), local("Ubuntu Light"), local("Segoe UI Light"), local("Roboto-Light"), local("DroidSans"), local("Tahoma");
}

// Custom page class:
// https://v1.vuepress.vuejs.org/theme/default-theme-config.html#custom-page-class

// Example:
// https://github.com/pixelandtonic/vuepress-theme-craftdocs/blob/master/styles/override.styl
.news-page {
	margin-left: 3em;
}


html
	font-size: 20px

p, ol, ul, a
	font-size: 1rem
	font-family: system

p, ol, ul
	line-height: 1.4em


// Links in upper right navbar
.nav-links a 
	font-family: Arvo
	
// MAKE NAVBAR CONTRASTING
header.navbar
	background-color: $navBarBackground

// Change font color of main "home" label
// on left of sidebar
header.navbar .site-name
	color: $siteNameColor

// Change background color of nav links
.theme-container .navbar .links
	background-color: $navBarBackground

// Change color of top right navbar links text.
.theme-container .navbar 
	color: $navBarRightColor 


