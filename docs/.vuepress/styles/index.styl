// Hip orange:
// #DF7D2C

// Hip dark blue
// #3C7EB8

// Another possible palette
// https://coolors.co/497cb7-edae49-540d6e-05a8aa-e84855
// Blue: #497CB7
// Mustard: #EDAE49 but I like #DF7D2C 
// Purple: #540D6E
// Cyan: #05A8AA
// Red: #E84855

// Patua One, Baloo, Kreon
// A  Arvo
// A  Aleo
// B-Copse No heavy 
// B Kreon 
// C+ Baloo
// F  "Patua+One" 
// Now I can swap out Arvo  
// This trick only works with 1 word fonts
$DisplayFont=Aleo

@import url('https://fonts.googleapis.com/css?family=Lato:400,700&display=swap')
@import url('http://fonts.googleapis.com/css?family='+ $DisplayFont + ':400,700|' + $DisplayFont)


// Text color of main "home" label
// on left of sidebar
$siteNameColor = white

// Background color of top navbar
$navBarBackground = #E84855

// Color of links on right top navbar
$navBarRightColor = white

// Text color of keywords in code blocks
$keywordColor = darken($textColor, 70%)

// Text color of comments in code blocks
$codeCommentColor = darkblue

// Text color of block quotes
$blockQuoteColor = black // #383838 

// h tag colors
$h1Color = black 
$h2Color = #05A8AA //#DF7D2C

// TODO: Find out why the hell I can't get rid of this. It's a cancer!
@font-face {
 }


// Custom page class:
// https://v1.vuepress.vuejs.org/theme/default-theme-config.html#custom-page-class

// Example:
// https://github.com/pixelandtonic/vuepress-theme-craftdocs/blob/master/styles/override.styl
.news-page {
	margin-left: 3em;
}


html
	font-size: 20px

p, ol, ul, a
	font-size: 1rem
	font-family: 'Lato' 

p, ol, ul
	line-height: 1.4em

// Big ol' quote character that
// starts the blockquote
blockquote:before 
    display: block;
    content: "\201C";
    font-size: 3.5em
    position: absolute;
    left: -.05em //-20px;
    top: -.25em // -20px;
    color: white // #7a7a7a;

blockquote 
    font-family: Georgia, sans-serif;
    font-size: 2rem;
    font-style: italic;
    width: 28rem 
    margin: 1.25em 0;
    padding: 01.35em 1em 
    line-height: 1.45;
    position: relative;
    color: $blockQuoteColor 
    background-color: $accentColor // black
    color: white

blockquote cite 
    color: #999999;
    font-size: 14px;
    display: block;
    margin-top: 5px;


blockquote cite:before 
    content: "\2014 \2009";


// Links in upper right navbar
.nav-links a 
	font-family: $DisplayFont
	
// MAKE NAVBAR CONTRASTING
header.navbar
	background-color: $navBarBackground

// Change font color of main "home" label
// on left of sidebar
header.navbar .site-name
	color: $siteNameColor

// Change background color of nav links
.theme-container .navbar .links
	background-color: $navBarBackground

// Change color of top right navbar links text.
.theme-container .navbar 
	color: $navBarRightColor 


// All this to change h1!
.theme-default-content:not(.custom) > h1:first-child
	font-size: 3.5em
	font-weight: 700
	line-height: 1em
	margin-top: 1em
	font-family: $DisplayFont 
	color: $h1Color 	
	
h2
	border-bottom: none
	color: $h2Color
	font-family:$DisplayFont 
	font-size: 1.75em
	

h3
	font-family:$DisplayFont 

h4
	font-size: 1em
	border-bottom: 3px solid black
	padding-bottom: .5em

h5
	font-size: 1em
	text-transform: uppercase
	font-weight: bold	

// Upper left corner home page link
.site-name
	font-size: 3em
	font-family:$DisplayFont 
	letter-spacing: .5em
	color: #271033
	color: red

// Most images are screen shots. 
// Give them a light border.
img
	display: block
	border: 1px solid lightgray
	padding: .5em
	box-shadow: 1px 1px 1px 1px #888888

// Use Arvo for the left sidebar
.sidebar-link
  font-weight: bold
  font-family:$DisplayFont 

// CHANGE HOW CODE IS DISPLAYED
// Comment color
.token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata
	color: $codeCommentColor 

// The keywords in lines of code themselves
.theme-default-content pre code, .theme-default-content pre[class*="language-"] code
	color: $keywordColor 


